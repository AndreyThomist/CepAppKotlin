<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_marginLeft="15dp"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cep"
        />
    <EditText  android:inputType="numberSigned" android:id="@+id/cep" android:layout_height="wrap_content"  android:layout_width="match_parent">
    </EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <Button
        android:layout_height="50dp"
        android:id="@+id/Button"
        android:text="Buscar"
        android:layout_width="100dp" />
    <Button
        android:layout_height="50dp"
        android:id="@+id/Limpar"
        android:text="Limpar"
        android:layout_width="100dp" />
    </LinearLayout>

    <ListView android:id="@+id/lista" android:layout_width="match_parent" android:layout_height="match_parent"></ListView>

</LinearLayout>